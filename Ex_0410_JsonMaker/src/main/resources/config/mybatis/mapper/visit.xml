<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="v">
	<!-- 방명록 전체조회 -->
	<select id="visit_list" resultType="vo.VisitVO">
		select * from visit order by idx desc
	</select>
	
	<!-- 새 글 등록 -->
	<insert id="visit_insert" parameterType="visit">
		insert into VISIT values(seq_visit_idx.nextVal, #{name}, #{content}, #{pwd}, #{ip}, sysdate, #{filename})
	</insert>
	
	<!-- 글 삭제 -->
	<delete id="visit_delete" parameterType="int" >
		delete from VISIT where idx = #{idx}
	</delete>
	
	<!-- 게시글 한 건 조회 -->
	<select id="visit_one" parameterType="int" resultType="visit">
		select * from VISIT where idx = #{idx}
	</select>
	
	<!-- 게시글 업데이트 -->
	<update id="visit_update" parameterType="vo.VisitVO">
		update VISIT set name = #{name}, content = #{content}, pwd = #{pwd}, ip = #{ip}, regidate = sysdate	where idx = #{idx}
	</update>
	
</mapper>






















